<h1 class="text-center mt-4 mb-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
  <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-primary" %>
</div>


<h3 class="text-center mt-4">Articles</h3>

<div class="digg_pagination">
  <div class="d-flex justify-content-center">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>

<%= render 'articles/article' %>

<div class="digg_pagination mt-2 mb-2">
  <div class="d-flex justify-content-center">
    <div class="page_info rounded">
      <%= page_entries_info @articles %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>