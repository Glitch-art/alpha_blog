<h1 class="text-center mt-4"><%= @article.title %></h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-2 bg-body rounded">
        <div class="card-header fst-italic">
          <%= link_to gravatar_for(@article.user, options = { size: 40 }), user_path(@article.user) %>
          by <%= @article.user.username if @article.user %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= simple_format(@article.description) %></p>
          <%= link_to "Back", articles_path, class: "btn btn-outline-secondary" %>
          <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-primary" %>
          <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
        <% end %>
        </div>
        <div class="card-footer text-muted">
          Created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago
        </div>
      </div>
    </div>
  </div>
</div>